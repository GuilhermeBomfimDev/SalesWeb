@model SalesWebMvc.Models.Seller;

@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />

<div class="row">
    <div class="col-md-4" >
        <form asp-action="Create">
            <div class="form-group" style="margin-bottom: 10px">
                <label asp-for="Nome" class="control-label">Name</label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group" style="margin-bottom: 10px">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group" style="margin-bottom: 10px">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group" style="margin-bottom: 10px">
                <label asp-for="BaseSalary" class="control-label"></label>
                <input asp-for="BaseSalary" class="form-control" />
            </div>
            <div class="form-group" style="margin-bottom: 10px">
                <label asp-for="Department.Name" class="control-label">Department</label>
                <input asp-for="Department.Name" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>