@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple search</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label" style="margin-bottom: 10px">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" style="margin-bottom: 10px" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label" style="margin-bottom: 10px">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" style="margin-bottom: 10px" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary" style="margin-bottom: 30px">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="border-top footer text-muted"></div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <legend style="margin-top: 20px">Grouping search</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label" style="margin-bottom: 10px">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" style="margin-bottom: 10px" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label" style="margin-bottom: 10px">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" style="margin-bottom: 10px" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary" style="margin-bottom: 10px">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>